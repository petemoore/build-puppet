cat > /etc/apt/sources.list <<EOF
# blow away any existing repositories and add our own
# noting the repo urls are unique to the the version of ubuntu.
deb http://repos/repos/apt/XXXX/ <%= @os_codename %> main restricted universe
deb http://repos/repos/apt/XXXX/ <%= @os_codename %>-security main restricted universe
deb http://repos/repos/apt/releng/ <%= @os_codename %> main
deb http://repos/repos/apt/puppetlabs/ <%= @os_codename %> dependencies main
EOF
apt-get update || fail
